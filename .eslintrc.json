{
    "root": true,
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": [
        "lib"
    ],
    "rules": {
        "semi": [
            2,
            "always"
        ],
        "quotes": [
            2,
            "double"
        ],
        "@typescript-eslint/no-inferrable-types": 0,
        "@typescript-eslint/no-namespace": 0
    }
}